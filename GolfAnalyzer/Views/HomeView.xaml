<UserControl x:Class="GolfAnalyzer.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ico="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:conv="clr-namespace:GolfAnalyzer.Converters">
    <UserControl.Resources>
        <conv:IndexToOneBasedConverter x:Key="IndexToOneBasedConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Live Camera 1 -->
        <Image x:Name="CameraView1" Grid.Column="0"
               Width="600" Height="800" Margin="10"
               Source="{Binding CameraView1Source}"/>

        <!-- Live Camera 2 -->
        <Image x:Name="CameraView2" Grid.Column="1"
               Width="600" Height="800" Margin="10"
               Source="{Binding CameraView2Source}"/>

        <!-- Countdown overlay centered across Camera 1 & 2 -->
        <Border Grid.Column="0" Grid.ColumnSpan="2"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="#00000000" Padding="8"
                Visibility="{Binding IsCountdownVisible, Converter={StaticResource BoolToVisibility}}"
                Panel.ZIndex="10"
                IsHitTestVisible="False">
            <TextBlock Text="{Binding CountdownText}"
                       FontSize="500"
                       FontWeight="Bold"
                       Foreground="Orange"
                       Opacity="0.9"
                       TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="16" ShadowDepth="0" Opacity="0.9"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <!-- Control Pannel -->
        <StackPanel Grid.Column="2" Margin="10"
                    HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- THREE LEDS FOR 3 DEVICES -->
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <!-- D1 -->
                <StackPanel Margin="8,0" HorizontalAlignment="Center">
                    <Ellipse Style="{StaticResource Device1LedStyle}"/>
                    <TextBlock Text="D1" Foreground="Orange" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- D2 -->
                <StackPanel Margin="8,0" HorizontalAlignment="Center">
                    <Ellipse Style="{StaticResource Device2LedStyle}"/>
                    <TextBlock Text="D2" Foreground="Orange" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- D3 -->
                <StackPanel Margin="8,0" HorizontalAlignment="Center">
                    <Ellipse Style="{StaticResource Device3LedStyle}"/>
                    <TextBlock Text="D3" Foreground="Orange" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>

            <Button Command="{Binding ConnectCommand}"
                    Margin="10" Background="#333333" Height="100" Width="100">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <ico:PackIconMaterial Kind="CastConnected" Margin="10,10,10,10"
                                          Width="60" Height="60"
                                          Foreground="Orange"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding StartRecordCommand}"
                    Margin="10" Background="#333333" Height="100" Width="100">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <ico:PackIconMaterial Kind="RecordRec" Margin="10,10,10,10"
                                          Width="60" Height="60"
                                          Foreground="Orange"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- History - 3x2 grid, images with centered number and centered play button -->
        <StackPanel Grid.Column="3" Margin="10" Width="400">
            <ItemsControl ItemsSource="{Binding HistoryItems}" AlternationCount="6">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="3" Columns="2"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="200" Height="280" Margin="5">
                            <Border CornerRadius="6" Background="#222" SnapsToDevicePixels="True">
                                <Image Stretch="UniformToFill" Source="{Binding Thumbnail}" />
                            </Border>

                            <Border Background="#80000000"
                                    CornerRadius="4"
                                    Padding="4,2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="6">
                                <TextBlock Text="{Binding SavedTimeDisplay}"
                                           Foreground="White"
                                           FontSize="12"
                                           FontWeight="SemiBold"/>
                            </Border>

                            <!-- Centered big number (slightly faded) -->
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="150"
                                       FontWeight="Bold"
                                       Foreground="Orange"
                                       Opacity="0.55"
                                       IsHitTestVisible="False"
                                       Text="{Binding Path=(ItemsControl.AlternationIndex),
                                                      RelativeSource={RelativeSource AncestorType=ContentPresenter},
                                                      Converter={StaticResource IndexToOneBasedConverter}}">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="0" Opacity="0.85"/>
                                </TextBlock.Effect>
                            </TextBlock>

                            <!-- Centered play button -->
                            <Button Width="56" Height="56"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Background="#80000000"
                                    BorderBrush="Orange"
                                    BorderThickness="1"
                                    Padding="0"
                                    Command="{Binding DataContext.PlayHistoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding Path=(ItemsControl.AlternationIndex),
                                                               RelativeSource={RelativeSource AncestorType=ContentPresenter},
                                                               Converter={StaticResource IndexToOneBasedConverter}}">
                                <ico:PackIconMaterial Kind="Play"
                                                      Width="32" Height="32"
                                                      Foreground="Orange"/>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Analysis Overlay - Displays centered over the two camera columns -->
        <Grid Grid.Column="0"
              Grid.ColumnSpan="2"
              Panel.ZIndex="999"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Background="#80000000">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsAnalyzing}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Border CornerRadius="8"
                    Background="#CC1E1E1E"
                    Padding="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="{Binding AnalysisMessage}"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True"
                                 Width="240"
                                 Height="6"
                                 Margin="0,12,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>