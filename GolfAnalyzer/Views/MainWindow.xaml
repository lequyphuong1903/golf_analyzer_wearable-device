<Window x:Class="GolfAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ico="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1980"
        Background="Black"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="Black"
                BorderBrush="Black"
                BorderThickness="0,0,0,1"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="1"
                       Source="/Assets/logo.png"/>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" HorizontalAlignment="Center"
                        Text="Golf Analyzer" 
                        FontSize="70" FontWeight="Bold"
                        FontFamily="OCR A Extended"
                        VerticalAlignment="Center"
                        Foreground="Orange"
                        Margin="50,30,0,0"/>
                    <TextBlock Grid.Row="1" HorizontalAlignment="Center"
                        Text="- Evaluate Your Game- "
                        FontSize="50" FontWeight="Bold"
                        FontFamily="OCR A Extended"
                        VerticalAlignment="Center"
                        Foreground="Orange"
                        Margin="50,10,0,0"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center" 
                            HorizontalAlignment="Right" Grid.Column="2">
                    <Button Command="{Binding QuitCommand}" Margin="10" Background="#333333" Height="100" Width="250">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ico:PackIconMaterial Kind="ExitToApp" Margin="10,10,10,10"
                                                  Width="80" Height="80"
                                                  Foreground="Orange"/>
                            <TextBlock Text=" Exit " FontSize="60" VerticalAlignment="Center" Foreground="Orange"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </Grid>
        </Border>

        <!-- Content area: left nav + user control host -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="Black"
                    BorderBrush="Black"
                    BorderThickness="0,0,1,0">
                <StackPanel>

                    <Button Command="{Binding ShowHomeCommand}"
                            Margin="10" Background="#333333" Height="60" Width="60">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ico:PackIconMaterial Kind="Home" Margin="10,10,10,10"
                                                  Width="35" Height="35"
                                                  Foreground="Orange"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding ShowDashboardCommand}"
                            Margin="10" Background="#333333" Height="60" Width="60">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ico:PackIconMaterial Kind="ViewDashboard" Margin="10,10,10,10"
                                                  Width="35" Height="35"
                                                  Foreground="Orange"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding AISkeletonCommand}"
                            Margin="10" Background="#333333" Height="60" Width="60">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ico:PackIconMaterial Kind="Human" Margin="10,10,10,10"
                                                  Width="35" Height="35"
                                                  Foreground="{Binding SkeletonBrush}"/>
                        </StackPanel>
                    </Button>

                    <!-- Drawing buttons -->
                    <Button Command="{Binding MouseCommand}"
                            Margin="10" Background="#333333" Height="60" Width="60">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ico:PackIconMaterial Kind="Mouse" Margin="10,10,10,10"
                              Width="35" Height="35"
                              Foreground="{Binding MouseBrush}"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding ColorCommand}"
                            Margin="10" Background="#333333" Height="60" Width="60">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ico:PackIconMaterial Kind="FormatColorFill" Margin="10,10,10,10"
                                                  Width="35" Height="35"
                                                  Foreground="{Binding DrawingBrush}"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding DrawLineCommand}"
                            Margin="10" Background="#333333" Height="60" Width="60">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ico:PackIconMaterial Kind="VectorLine" Margin="10,10,10,10"
                                                  Width="35" Height="35"
                                                  Foreground="{Binding LineBrush}"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding DrawCircleCommand}"
                            Margin="10" Background="#333333" Height="60" Width="60">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ico:PackIconMaterial Kind="CircleOutline" Margin="10,10,10,10"
                                                  Width="35" Height="35"
                                                  Foreground="{Binding CircleBrush}"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding DrawRectangleCommand}"
                            Margin="10" Background="#333333" Height="60" Width="60">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ico:PackIconMaterial Kind="RectangleOutline" Margin="10,10,10,10"
                                                  Width="35" Height="35"
                                                  Foreground="{Binding RectangleBrush}"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding EraseCommand}"
                            Margin="10" Background="#333333" Height="60" Width="60">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ico:PackIconMaterial Kind="EraserVariant" Margin="10,10,10,10"
                                                  Width="35" Height="35"
                                                  Foreground="Orange"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </Border>

            <!-- View host + drawing overlay -->
            <Grid Grid.Column="1">
                <!-- Existing view host -->
                <ContentControl
                    Margin="12,12,12,0"
                    Content="{Binding CurrentViewModel}"/>

                <!-- Drawing overlay canvas -->
                <Canvas x:Name="DrawCanvas"
                        Panel.ZIndex="10"
                        Background="Transparent"
                        IsHitTestVisible="{Binding IsDrawingActive}"
                        MouseLeftButtonDown="DrawCanvas_MouseLeftButtonDown"
                        MouseMove="DrawCanvas_MouseMove"
                        MouseLeftButtonUp="DrawCanvas_MouseLeftButtonUp"/>
            </Grid>
        </Grid>
    </Grid>
</Window>